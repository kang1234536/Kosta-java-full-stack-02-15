INSERT INTO 테이블(칼럼리스트) VALUES(값리스트);

UPDATE 테이블이름
SET 칼럼 = 값,칼럼 = 값,칼럼 = 값,칼럼 = 값 
WHERE 조건문;

DELETE FROM 테이블이름
WHERE 조건문;


