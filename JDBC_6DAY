변수이름 변수타입,
변수이름 변수타입);


create table customer (
 cust_id number,
 cust_name varchar2(20),
 gender char(1),
 gender2 char(10),
 birthday date,
 year01 interval year(3) to month,
 day01 interval day(3) to second
);

--테이블 삭제하기
drop table 테이블이름;

drop table customer;

